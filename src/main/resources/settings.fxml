<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sep_projecta.SettingsController" stylesheets="@Styles.css">
    <children>
        <HBox alignment="CENTER" prefHeight="34.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Button fx:id="homeButton" mnemonicParsing="false" onAction="#handleBackHome" text="Home" HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="browseButton" mnemonicParsing="false" onAction="#browsePage" text="Browse">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="settingsButton" mnemonicParsing="false" text="Settings">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
        <Button fx:id="changeInfo" text="Change User Info" onAction="#handleChangeUserInfo"/>
        <Button fx:id="deleteAccount" text="Delete Account" onAction="#handleDeleteAccount"/>
    </children>
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
</VBox>